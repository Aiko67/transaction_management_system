<h1>All Transactions</h1>

<% if flash[:error] %>
  <div class="flash-error"><%= flash[:error] %></div>
<% end %>

<% if flash[:success] %>
  <div class="flash-success"><%= flash[:success] %></div>
<% end %>

<table class="transactions-table">
  <tr>
    <th>Date</th>
    <th>Account Number</th>
    <th>Account Holder Name</th>
    <th>Amount</th>
    <th>Status</th>
  </tr>
  <% @transactions.each do |t| %>
    <% status_class = case t["Status"]
        when "Pending" then "status-pending"
        when "Settled" then "status-settled"
        when "Failed"  then "status-failed"
        else ""
      end %>
    <tr>
      <td><%= t["Transaction Date"] %></td>
      <td><%= t["Account Number"] %></td>
      <td><%= t["Account Holder Name"] %></td>
      <td><%= t["Amount"] %></td>
      <td class="<%= status_class %>"><%= t["Status"] %></td>
    </tr>
  <% end %>
</table>